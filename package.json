{
  "name": "chakra-ui-admin-back",
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "start-db": "docker-compose up -d",
    "stop-db": "docker-compose down",
    "clear-db": "docker-compose down --volumes",
    "migrate-dev": "dotenv -- prisma migrate dev",
    "seed": "dotenv -- prisma db seed",
    "dev": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "build": "tsc --sourceMap false",
    "start": "node ./dist/src/index.js"
  },
  "dependencies": {
    "@prisma/client": "3.1.1",
    "@types/bcryptjs": "^2.4.2",
    "apollo-server-core": "^3.3.0",
    "apollo-server-fastify": "^3.3.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.1",
    "fastify": "^3.22.0",
    "graphql": "^15.6.0",
    "graphql-middleware": "^6.1.7",
    "graphql-shield": "^7.5.0",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typegraphql-prisma": "^0.16.1",
    "prisma": "3.1.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.10.2",
    "dotenv-cli": "^4.0.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "graphql-fields": "^2.0.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
